{
  "name": "@mambasdk/docs",
  "description": "Docs and examples for Mamba Web",
  "version": "0.0.2",
  "author": "Stone Payments - Mamba Team",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "sapper dev",
    "build": "yarn run pull:packages && cross-env NODE_ENV=production sapper build",
    "export": "sapper export",
    "start": "node build",
    "now-start": "node scripts/slack_webhook.js && node build",
    "deploy": "now --public && now alias",
    "pull:packages": "node scripts/update_packages.js ",
    "pull:packages:bash": "ls ./ && chmod +x scripts/update_packages.sh && scripts/update_packages.sh && ls ./packages",
    "postinstall": "yarn run pull:packages && ls ./packages/components",
    "lint": "npm run lint:js",
    "lint:js": "eslint \"*.js\" \"{tools,packages,docs-sapper}/**/*.{js,html,svelte}\"",
    "format": "npm run format:css; npm run format:js",
    "format:js": "prettier --loglevel silent --write \"*.js\" \"{tools,packages,docs-sapper}/**/*.js\" && eslint --fix \"*.js\" \"{tools,packages,docs-sapper}/**/*.{js,html,svelte}\"",
    "format:css": "prettier --loglevel silent --write \"packages/**/*.{css,pcss}\"",
    "clean:deployments": "chmod +x scripts/now_clean.sh && scripts/now_clean.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,svelte}": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{pcss,css}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@mamba/dialog": "^0.0.2-alpha.1",
    "@mamba/sprite": "^0.0.2-alpha.1",
    "@mamba/store": "^0.0.2-alpha.1",
    "@mamba/styles": "^0.0.2-alpha.5",
    "cheerio": "^1.0.0-rc.2",
    "codemirror": "^5.36.0",
    "compression": "^1.7.2",
    "cross-env": "^5.2.0",
    "degit": "^2.1.3",
    "do-not-zip": "^0.1.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "globby": "^8.0.1",
    "golden-fleece": "^1.0.9",
    "jsbarcode": "^3.9.0",
    "locate-character": "^2.0.5",
    "lodash.capitalize": "^4.2.1",
    "marked": "^0.4.0",
    "node-fetch": "^2.2.0",
    "nprogress": "^0.2.0",
    "prismjs": "^1.14.0",
    "qrious": "^4.0.2",
    "rollup": "^0.63.4",
    "serve-static": "^1.13.2",
    "sourcemap-codec": "^1.4.1",
    "svelte-extras": "^2.0.2",
    "svelte-page": "^0.0.6",
    "svelte-routing": "^0.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@mamba/configs": "^0.0.2-alpha.1",
    "@mamba/webpack": "^0.0.2-alpha.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-prismjs": "^1.0.2",
    "chalk": "^2.4.1",
    "css-loader": "^1.0.0",
    "docsearch.js": "^2.5.2",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "lerna": "^2.9.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mini-html-webpack-plugin": "^0.2.3",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.2",
    "postcss-advanced-variables": "^2.3.3",
    "postcss-atroot": "^0.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^2.0.0",
    "postcss-html": "^0.32.0",
